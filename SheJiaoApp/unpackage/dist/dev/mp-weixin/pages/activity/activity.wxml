<view>
  <view>
    <view style="padding:40rpx 0rpx;font-size:32rpx;background-color:#00aaff;text-align:center;color:#FFFFFF;">
      <block wx:if="{{user.id}}">
        <view data-event-opts="{{[['tap',[['goPage',['/pages/addactivity/addactivity']]]]]}}" style="background-color:#FFFFFF;color:#00aaff;width:30%;border-radius:20rpx;margin-left:65%;" bindtap="__e">+ 创建活动</view>
      </block>
    </view>
  </view>
  <view>
    <block wx:for="{{ActivityData}}" wx:for-item="item" wx:for-index="__i0__" wx:key="*this">
      <view data-event-opts="{{[['tap',[['goActivityDetail',['$0'],[[['ActivityData','',__i0__,'id']]]]]]]}}" class="box" style="margin:30rpx 30rpx;" bindtap="__e">
        <view style="font-weight:700;font-size:35rpx;margin-bottom:20rpx;">{{"活动名称："+item.name}}</view>
        <view style="margin-bottom:20rpx;font-weight:400;"><label style="color:#00aaff;" class="_span">{{item.num}}</label><label style="margin-left:10rpx;" class="_span">人参与讨论</label><label style="margin:0rpx 20rpx;" class="_span">{{"发布人："+item.userName}}</label></view>
        <view>{{"发布时间："+item.time}}</view>
      </view>
    </block>
  </view>
</view>