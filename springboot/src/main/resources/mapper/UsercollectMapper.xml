<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.UsercollectMapper">

    <sql id="Base_Column_List">
        id,user_id,target_id,time
    </sql>

    <select id="selectAll" resultType="com.example.entity.Usercollect">
        select
        <include refid="Base_Column_List" />
        from usercollect
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="userId != null"> and user_id = #{userId}</if>
            <if test="targetId != null"> and target_id = #{targetId}</if>
            <if test="time != null"> and time like concat('%', #{time}, '%')</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Usercollect">
        select
        <include refid="Base_Column_List" />
        from usercollect
        where id = #{id}
    </select>

    <select id="selectByUserId" resultType="com.example.entity.Usercollect">
        select usercollect.*,user.name as userName,user.img as userImg
        from usercollect
        left join user on usercollect.target_id = user.id
        where usercollect.user_id = #{id}
    </select>

    <delete id="deleteById">
        delete from usercollect
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Usercollect" useGeneratedKeys="true" keyProperty="id">
        insert into usercollect
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="targetId != null">target_id,</if>
            <if test="time != null">time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="userId != null">#{userId},</if>
            <if test="targetId != null">#{targetId},</if>
            <if test="time != null">#{time},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Usercollect">
        update usercollect
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="targetId != null">
                target_id = #{targetId},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>