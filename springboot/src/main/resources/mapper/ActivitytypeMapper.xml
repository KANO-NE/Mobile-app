<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ActivitytypeMapper">

    <sql id="Base_Column_List">
        id,value,text
    </sql>

    <select id="selectAll" resultType="com.example.entity.Activitytype">
        select
        <include refid="Base_Column_List" />
        from activitytype
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="value != null"> and value like concat('%', #{value}, '%')</if>
            <if test="text != null"> and text like concat('%', #{text}, '%')</if>
        </where>
        order by id asc
    </select>

    <select id="selectById" resultType="com.example.entity.Activitytype">
        select
        <include refid="Base_Column_List" />
        from activitytype
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from activitytype
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Activitytype" useGeneratedKeys="true" keyProperty="id">
        insert into activitytype
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="value != null">value,</if>
            <if test="text != null">text,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="value != null">#{value},</if>
            <if test="text != null">#{text},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Activitytype">
        update activitytype
        <set>
            <if test="value != null">
                value = #{value},
            </if>
            <if test="text != null">
                text = #{text},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>