<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.BannerMapper">

    <sql id="Base_Column_List">
        id,title,img,url,username,time
    </sql>

    <select id="selectAll" resultType="com.example.entity.Banner">
        select
        <include refid="Base_Column_List" />
        from banner
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="title != null"> and title like concat('%', #{title}, '%')</if>
            <if test="img != null"> and img like concat('%', #{img}, '%')</if>
            <if test="url != null"> and url like concat('%', #{url}, '%')</if>
            <if test="username != null"> and username like concat('%', #{username}, '%')</if>
            <if test="time != null"> and time like concat('%', #{time}, '%')</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Banner">
        select
        <include refid="Base_Column_List" />
        from banner
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from banner
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Banner" useGeneratedKeys="true" keyProperty="id">
        insert into banner
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="title != null">title,</if>
            <if test="img != null">img,</if>
            <if test="url != null">url,</if>
            <if test="username != null">username,</if>
            <if test="time != null">time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="title != null">#{title},</if>
            <if test="img != null">#{img},</if>
            <if test="url != null">#{url},</if>
            <if test="username != null">#{username},</if>
            <if test="time != null">#{time},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Banner">
        update banner
        <set>
            <if test="title != null">
                title = #{title},
            </if>
            <if test="img != null">
                img = #{img},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>